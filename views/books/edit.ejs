<main>
    <div class="container">
      <div class="breadcrumb">
        <a href="/books">Books</a> / <a href="/books/<%= book._id %>"><%= book.title %></a> / <span>Edit</span>
      </div>
  
      <div class="form-container">
        <h2>Edit Book</h2>
        <form id="edit-book-form" enctype="multipart/form-data" data-id="<%= book._id %>">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= book.title %>" required>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="5" required><%= book.description %></textarea>
          </div>
          <div class="form-group">
            <label for="library">Library</label>
            <select id="library" name="library" required>
              <% libraries.forEach(function(library) { %>
                <option value="<%= library._id %>" <%= book.library._id.toString() === library._id.toString() ? 'selected' : '' %>><%= library.name %></option>
              <% }); %>
            </select>
          </div>
          <div class="form-group">
            <label for="image">Book Cover Image</label>
            <input type="file" id="image" name="image" accept="image/*">
            <p class="help-text">Leave empty to keep the current image</p>
            <div class="image-preview" id="image-preview">
              <img src="<%= book.image %>" alt="<%= book.title %>">
            </div>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Update Book</button>
            <a href="/books/<%= book._id %>" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </main>
  
  