<main>
    <div class="container">
      <div class="breadcrumb">
        <a href="/libraries">Libraries</a> / <a href="/libraries/<%= library._id %>"><%= library.name %></a> / <span>Add to Inventory</span>
      </div>
  
      <div class="form-container">
        <h2>Add Book to Inventory</h2>
        <form id="add-to-inventory-form" enctype="multipart/form-data" data-library="<%= library._id %>">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" required>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="5" required></textarea>
          </div>
          <div class="form-group">
            <label for="image">Book Cover Image</label>
            <input type="file" id="image" name="image" accept="image/*" required>
            <div class="image-preview" id="image-preview"></div>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Add to Inventory</button>
            <a href="/libraries/<%= library._id %>" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </main>
  
  