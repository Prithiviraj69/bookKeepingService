<main>
    <div class="container">
      <div class="breadcrumb">
        <a href="/libraries">Libraries</a> / <a href="/libraries/<%= library._id %>"><%= library.name %></a> / <span>Edit</span>
      </div>
  
      <div class="form-container">
        <h2>Edit Library</h2>
        <form id="edit-library-form" data-id="<%= library._id %>">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="<%= library.name %>" required>
          </div>
          <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" name="address" value="<%= library.address %>" required>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="5" required><%= library.description %></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Update Library</button>
            <a href="/libraries/<%= library._id %>" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </main>
  
  